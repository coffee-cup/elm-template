{
  "name": "elm-template",
  "version": "1.0.0",
  "description": "Static website template using Elm.",
  "main": "index.js",
  "scripts": {
    "build": "NODE_ENV=production webpack -p --progress",
    "dev": "NODE_ENV=development webpack-dev-server --hot --inline --progress",
    "start": "npm run dev",
    "copy": "cp -r public/* build; cp public/index.html build/200.html; cp public/index.html build/404.html",
    "clean": "rimraf build",
    "prebuild": "npm run clean",
    "postbuild": "npm run copy",
    "predeploy": "npm run build",
    "deploy": "surge build/ https://coffee-cup-elm-template.surge.sh",
    "test": "echo \"Error: no test specified\""
  },
  "author": "Jake Runzer <jakerunzer@gmail.com> (https://jakerunzer.xyz)",
  "license": "MIT",
  "dependencies": {
    "json-server": "^0.9.5",
    "normalize-css": "^2.3.1",
    "tachyons": "^4.6.2"
  },
  "devDependencies": {
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.22.0",
    "css-loader": "^0.26.1",
    "elm": "^0.18.0",
    "elm-hot-loader": "^0.5.4",
    "elm-webpack-loader": "^4.2.0",
    "eslint": "^3.15.0",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-babel": "^4.0.1",
    "file-loader": "^0.10.0",
    "node-sass": "^4.5.0",
    "postcss-loader": "^1.3.0",
    "rimraf": "^2.5.4",
    "sass-loader": "^6.0.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.3.0",
    "webpack-notifier": "^1.5.0"
  }
}
